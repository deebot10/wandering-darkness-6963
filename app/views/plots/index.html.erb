<h1>Plot Index</h1>

<% @plots.each do |plot|%>
  <section id=<%= "plot-#{plot.id}"%>>
    <p> <%= plot.number%> </p>
    
    <% plot.plants.each do |plant|%>
      <p><%= plant.name%></p>
      <%= link_to 'Remove Plant', plot_plotted_plant_path(plot.id, plant.id), method: :delete, local: true %>
    <%end%>
  </section>
<%end%>